<?xml version="1.0" encoding="UTF-8"?>
<addon id="skin.estuary.multifanart-mod" version="0.9.0" name="Estuary multiple fanart mod" provider-name="phil65, Piers">
	<requires>
		<import addon="xbmc.gui" version="5.12.0"/>
	</requires>
	<extension point="xbmc.gui.skin" debugging="false">
		<res width="1920" height="1080" aspect="16:9" default="true" folder="1080i" />
		<res width="2560" height="1080" aspect="21:9" default="false" folder="1080i" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">A quick mod of Estuary skin by phil65 and Piers. (Kodi's default skin)</summary>
